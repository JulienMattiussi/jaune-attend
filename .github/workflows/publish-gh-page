name: "Publish site to github pages"

on:
  workflow_dispatch: ~

jobs:
  merge-back-pr:
    if: github.event_name == 'workflow_dispatch'
    name: Publish site to github pages
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
        with:
          fetch-depth: 0

      - name: Build Site
        run: |
          git fetch
          yarn build
          git checkout gh-page-test
          rm -rf node_modules
          rm -rf public
          rm -rf yarn.lock
          rm -rf README.md
          rm -rf package.json
          rm -rf babel.config.js
          rm -rf makefile
          rm -rf src
          mv ./dist/* .
          rm -rf dist
          git add .
          git commit -m "Publish page"
          git push -f
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
